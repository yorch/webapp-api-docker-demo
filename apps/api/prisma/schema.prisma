model actor {
  actor_id    Int      @id
  first_name  String
  last_name   String
  last_update DateTime
}

model category {
  category_id Int      @id
  last_update DateTime
  name        String
}

model film {
  description          String?
  film_id              Int       @id
  fulltext             String
  language_id          language  @relation("film_language_idTolanguage", references: [language_id])
  last_update          DateTime
  length               Int?
  original_language_id language? @relation("film_original_language_idTolanguage", references: [language_id])
  release_year         Int?
  rental_duration      Int       @default(3)
  rental_rate          Float     @default(4.99)
  replacement_cost     Float     @default(19.99)
  title                String
}

model language {
  language_id                               Int      @id
  last_update                               DateTime
  name                                      String
  films_film_language_idTolanguage          film[]   @relation("film_language_idTolanguage")
  films_film_original_language_idTolanguage film[]   @relation("film_original_language_idTolanguage")
}
